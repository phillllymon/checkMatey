.multiplayer_block {
    z-index: -1;
    position: absolute;
    opacity: 0.2;
    background: url(<%= asset_path("piratesPlaying.png") %>);
    width: 100%;
    height: 100%;
    background-size: cover;
}

.computer_block {
    z-index: -1;
    background: url(<%= asset_path("pirateRobot.png") %>);
    background-position: center;
    width: 30vh;
    max-width: 250px;
    height: 30vh;
    min-height: 200px;
    min-width: 200px;
    background-size: cover;
}

.pirate_left {
    z-index: -1;
    background: url(<%= asset_path("pirateLeft.png") %>);
    background-position: center;
    width: 80px;
    height: 110px;
    background-size: cover;
}

.pirate_right {
    z-index: -1;
    background: url(<%= asset_path("pirateRight.png") %>);
    background-position: center;
    width: 100px;
    height: 107px;
    background-size: cover;
}

.sword {
    background: url(<%= asset_path("sword.png") %>);
    width: 100%;
    height: 100%;
    background-size: cover;
}

.flag_one {
    z-index: -1;
    background: url(<%= asset_path("pirateFlag1.png") %>);
