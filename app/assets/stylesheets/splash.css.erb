#splash {
    
    color: black;
    font-family: sans-serif;
}

#splash_top {
    position: relative;
    height: 438px;
    text-shadow: 2px 2px 3px rgba(255, 255, 255, 0.5);
    overflow: hidden;
}

#splash_logo {
    background: url(<%= asset_path("logo_transparent.png") %>);
    width: 460px;
    height: 108px;
}

#splash_logo_mobile {
    background: url(<%= asset_path("logo_transparent.png") %>);
    width: 100%;
    height: 23vw;
    background-size: cover;
}

#splash_set_mobile {
    background: url(<%= asset_path("chess_set_transparent.png") %>);
    width: 100vw;
    height: 62vw;
    background-size: cover;
}

h1 {
    font-size: 200%;
    padding-top: 1.5%;
    
    padding-bottom: 1.8%;
}

h3 {
    font-size: 130%;
   
}

ul {
    margin-top: 18px;
    list-style-type: disc;
}

li {
    margin-left: 3vw;
    padding-bottom: 22px;
    
}

#top_content {
    margin: auto;
    position: center;
    max-width: 1200px;
}

#splash_set {
    float: right;
    margin-right: 5vw;
    background: url(<%= asset_path("chess_set_transparent.png") %>);
    background-size: cover;
    width: 50vw;
    height: 31vw;
    max-width: 573px;
    max-height: 353px;
}

#ship {
    z-index: -1;
    position: absolute;
    top: 175px;
    left: 32%;
    background: url(<%= asset_path("ship.png") %>);
    opacity: 0.9;
    transform: rotate(3deg);
    width: 300px;
    height: 270px;
    background-size: cover;
    animation-name: sailing;
    animation-duration: 20s;
    animation-timing-function: linear;
}

@keyframes sailing {
    0%      {left: 80%; opacity: 0; top: 185px}
    10%     {opacity: 0.4; transform: rotate(6deg)}
    20%     {top: 170px}
    30%     {transform: rotate(0deg)}
    40%     {opacity: 0.2; top: 185px}
    50%     {transform: rotate(6deg)}
    60%     {opacity: 0.3; top: 170px}
    70%     {opacity: 0.5; transform: rotate(0deg)}
    80%     {top: 185px}
    90%     {transform: rotate(6deg)}
    100%    {left: 32%; opacity: 0.9; top: 175px; width: 300px; height: 270px; transform: rotate(3deg)}
}

#splash_top_words {
    margin-left: 3vw;
    width: 460px;
}

.play_now {
    color: white;
    padding: 20px;
    font-size: 30px;
    background-color: orange;
    margin-bottom: 30px;
    margin-left: 30px;
    border-radius: 5px;
}

.play_now:hover{
    background-color: darkorange;
    cursor: pointer;
}

.splash_bar {
    margin: auto;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgba(75, 59, 53, 0.6); 
    height: 50px;
    max-width: 1200px;
    border-radius: 5px;
}

.splash_option {
    font-size: 20px;
    text-decoration: none;
    color: lightgray;
    padding: 20px;
}

.splash_option:hover {
    color: white;
    cursor: pointer;
}



