#splash {
    
    color: black;
    font-family: sans-serif;
}

#splash_top {
    
    text-shadow: 2px 2px 3px rgba(255, 255, 255, 0.5);
}

#splash_logo {
    background: url(<%= asset_path("logo_transparent.png") %>);
    width: 460px;
    height: 108px;
}

#splash_logo_mobile {
    background: url(<%= asset_path("logo_transparent.png") %>);
    width: 100%;
    height: 23vw;
    background-size: cover;
}

h1 {
    font-size: 200%;
    padding-top: 1.5%;
    
    padding-bottom: 1.8%;
}

h3 {
    font-size: 130%;
   
}

ul {
    margin-top: 18px;
    list-style-type: disc;
}

li {
    margin-left: 50px;
    padding-bottom: 22px;
    
}

#top_content {
    margin: auto;
    position: center;
    max-width: 1200px;
}

#splash_set {
    float: right;
    margin-right: 50px;
    background: url(<%= asset_path("chess_set_transparent.png") %>);
    width: 573px;
    height: 353px;
}

#splash_top_words {
    margin-left: 50px;
    width: 460px;
}

.play_now {
    color: white;
    padding: 20px;
    font-size: 30px;
    background-color: orange;
    margin-bottom: 30px;
    margin-left: 30px;
    border-radius: 5px;
}

.play_now:hover{
    background-color: darkorange;
}

.splash_bar {
    margin: auto;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgba(75, 59, 53, 0.6);
    height: 50px;
    max-width: 1200px;
    border-radius: 5px;
}

.splash_option {
    font-size: 20px;
    text-decoration: none;
    color: lightgray;
    padding: 20px;
}

.splash_option:hover {
    color: white;
    cursor: pointer;
}

