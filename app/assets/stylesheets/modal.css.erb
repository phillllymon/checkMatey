.modal_back {
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.75);
    font-family: sans-serif;
    padding: 15px;
    font-size: 40px;
    color: lightgray;
}

.session_modal {
    position: fixed;
    z-index: 2;
    left: 50%;
    transform: translate(-50%);
    top: 15%;
    width: 550px;
    height: 400px;
    background-color: rgb(230, 230, 230);
    border-radius: 5px;
    font-family: sans-serif;
    font-size: 15px;
    color: rgb(60, 60, 60);
}

.session_form {
    margin: auto;
}

.form_label {
    width: 50%;
}

.med_pirate {
    float: right;
    margin-right: 10%;
    background-image: url(<%= asset_path("medium_transparent.png") %>);
    width: 120px;
    height: 127px;
}

.input_field {
    margin-bottom: 5px;
    margin-top: 5px;
    width: 100%;
    height: 30px;
    font-size: 15px;
}

.submit_bar {
    display: flex;
    align-items: center;
    justify-content: center;
}

.session_button {
    font-size: 15px;
    height: 30px;
    margin: 10px;
    border-radius: 5px;
}

.session_button:hover {
    font-size: 15px;
    height: 30px;
    margin: 10px;
    border-radius: 5px;
    background-color: lightgray;
}

.errors {
    margin: auto;
    height: 30px;
    color: red;
    text-decoration: none;
}
