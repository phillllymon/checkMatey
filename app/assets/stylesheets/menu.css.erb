.greeting {
    display: flex;
    justify-content: space-around;
    align-items: center;
    position: fixed;
    left: 0;
    top: 20%;
    height: 59px;
    width: 15%;
    min-width: 160px;
    font-size: 20px;
    font-family: sans-serif;
    transform: translate(0, -58px);
}

.menu {
    display: flex;
    flex-direction: column;
    position: fixed;
    left: 0;
    top: 20%;
    width: 15%;
    max-width: 200px;
    min-width: 160px;
    background-color: rgba(75, 59, 53, 0.6);
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    font-family: sans-serif;
}

.small_pirate {
    float: right;
    background: url(<%= asset_path("small_transparent.png") %>);
    height: 61px;
    width: 59px;
}